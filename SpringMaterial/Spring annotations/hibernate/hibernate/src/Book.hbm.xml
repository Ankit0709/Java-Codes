<?xml version="1.0" encoding="UTF-8"?>

<!-- it is a html comment lets add a DTD : Document Type Definition -->
	
	<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	

	<!-- lets do OR mapping -->

	<hibernate-mapping>
	
		<class name="com.cetpa.beans.Book" table="book_info">
			<id name="isbn" column="book_id">
				<generator class="increment">
				</generator>
			</id>
			<property name="topic" column="book_topic"/>
			<property name="author" column="book_author"/>
			<property name="cost" column="book_cost"/>
			<property name="publisher" column="book_publisher"/>
		</class>
	
	</hibernate-mapping>