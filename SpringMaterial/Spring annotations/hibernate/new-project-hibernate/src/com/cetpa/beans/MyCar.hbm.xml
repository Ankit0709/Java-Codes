<?xml version="1.0" encoding="UTF-8"?>

<!-- it is a html comment lets add a DTD : Document Type Definition -->
	
	<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	

	<!-- lets do OR mapping -->

	<hibernate-mapping>
	
		<class name="com.cetpa.beans.MyCar" table="car">
			<id name="carId" column="id">
				<generator class="increment">
				</generator>
			</id>
			<property name="carName" column="name"/>
			<property name="carMaker" column="maker"/>
		</class>
	
	</hibernate-mapping>